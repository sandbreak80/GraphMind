# EminiPlayer RAG Service Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# PATHS AND DIRECTORIES
# =============================================================================

# Base directory for documents (PDFs, videos, etc.)
# This should be an absolute path to your document collection
DOCUMENTS_DIR=/path/to/your/documents

# Output directory for processed files and results
OUTPUT_DIR=./outputs

# ChromaDB directory for vector storage
CHROMA_DIR=./chroma_data

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama server URL (adjust for your setup)
OLLAMA_BASE_URL=http://localhost:11434

# Default model for general tasks
OLLAMA_MODEL=llama3.1

# =============================================================================
# AI ENRICHMENT MODELS
# =============================================================================

# Enable/disable AI enrichment features
AI_ENRICHMENT_ENABLED=true

# Models for different enrichment tasks
VIDEO_ENRICHMENT_MODEL=llama3.1:8b
PDF_ENRICHMENT_MODEL=gpt-oss:20b
CHUNK_ENRICHMENT_MODEL=llama3.2:3b

# =============================================================================
# RETRIEVAL CONFIGURATION
# =============================================================================

# BM25 keyword search - number of results to retrieve
BM25_TOP_K=200

# Embedding similarity search - number of results to retrieve
EMBEDDING_TOP_K=100

# Final reranking - number of final results to return
RERANK_TOP_K=10

# Minimum similarity threshold for filtering results
MIN_SIMILARITY_THRESHOLD=0.3

# =============================================================================
# VIDEO PROCESSING
# =============================================================================

# Extract frame every N seconds from videos
VIDEO_FRAME_INTERVAL=30

# Whisper model size for speech-to-text
# Options: tiny, base, small, medium, large
WHISPER_MODEL_SIZE=base

# =============================================================================
# GPU CONFIGURATION (for Docker)
# =============================================================================

# GPU device to use (0, 1, 2, etc. or empty for CPU)
CUDA_VISIBLE_DEVICES=0

# NVIDIA runtime configuration
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Port for the FastAPI service
API_PORT=8000

# Host for the FastAPI service
API_HOST=0.0.0.0

# =============================================================================
# SECURITY (if needed in future)
# =============================================================================

# API keys for external services (if any)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Database credentials (if using external database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=eminiplayer
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
